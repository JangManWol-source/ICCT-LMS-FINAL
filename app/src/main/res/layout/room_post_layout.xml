<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/holder_room_post_info"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/header_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
                android:layout_centerVertical="true"
            android:layout_height="40dp"
            android:background="@drawable/profile"
            android:id="@+id/room_post_profile"/>
        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/room_post_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/room_post_person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/headings"
                android:text="Person"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:fontFamily="@font/sub_headings"
                android:layout_below="@id/room_post_person_name"
                android:id="@+id/room_post_type_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Type"
                android:textSize="8sp" />

            <TextView
                android:fontFamily="@font/sub_headings"
                android:id="@+id/room_post_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/room_post_type_display"
                android:layout_marginStart="5dp"
                android:hint="00 hours ago"
                android:text=""
                android:textSize="10sp" />
    </RelativeLayout>


        </RelativeLayout>
<RelativeLayout
    android:layout_below="@id/header_holder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/room_post_task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/tw_font"
                android:hint="Task title"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:fontFamily="@font/sub_headings"
                android:id="@+id/room_post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/room_post_task_title"
                android:layout_marginStart="8dp"
                android:hint="January 1, 2022"
                android:text=""
                android:textSize="10sp" />

            <TextView
                android:id="@+id/room_post_message_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/room_post_date"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:autoLink="all"
                android:fontFamily="@font/sub_headings"
                android:text="Instructions/Messages"
                android:textColor="@color/black"
                android:textIsSelectable="true" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>